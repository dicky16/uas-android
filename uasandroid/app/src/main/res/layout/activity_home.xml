<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:background="#66B5F8"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginStart="11dp"
                android:layout_marginTop="-11dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/todo"
                tools:srcCompat="@drawable/nav" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="MY SCHOOL MISALE"
                android:textColor="#FFFFFF"
                android:textSize="21sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="577dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="172dp">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="344dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/home_bg1"
                    android:contentDescription="@string/todo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginStart="45dp"
                        android:text="@string/controlling_listrik"
                        android:textColor="#EEFFFFFF"
                        android:textSize="21sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="84dp"
                        android:layout_height="87dp"
                        android:layout_gravity="center|right|center_horizontal"
                        android:layout_marginEnd="45dp"
                        android:foregroundGravity="right"
                        app:srcCompat="@drawable/home_city"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>